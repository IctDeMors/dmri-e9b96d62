# SQL Server API Configuration
# Copy this file to .env and fill in your values

# REQUIRED: API Key for authentication (generate a secure random string)
SQL_API_KEY=your-secure-api-key-here

# REQUIRED: SQL Server connection details
SQL_SERVER=localhost
SQL_DATABASE=YourDatabaseName
SQL_USER=sa
SQL_PASSWORD=YourSecurePassword

# OPTIONAL: SQL Server options
SQL_ENCRYPT=true
SQL_TRUST_CERT=true

# OPTIONAL: Server port (default: 3001)
PORT=3001

# OPTIONAL: Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
